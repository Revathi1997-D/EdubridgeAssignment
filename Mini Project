	    	System.out.println("Logout\n" +num5);
	    	System.out.println("Please choose any option: ");	       
	    	 
	    	 int number;
	         Scanner in = new Scanner(System.in);
	         number = in.nextInt();
	         switch (number) 
	         {
	         case 1:
	        	 viewmovielist(false);
	              
	               break;
	         case 2:
	        	 viewmovielist(true);
	        	 
	               break;
	         case 3:
